<odoo>
    <record id="bramalea_purchase_order_form_view_inherit" model="ir.ui.view">
        <field name="name">bramalea.purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <field name="sale_id" options="{'no_create': True}" readonly="1" invisible="not sale_id"/>
            </field>
        </field>
    </record>
</odoo>