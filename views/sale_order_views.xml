<odoo>
    <record id="bramalea_sale_view_order_form_inherit" model="ir.ui.view">
        <field name="name">bramalea.sale.view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button id="create_invoice" position="after">
                <button id="create_purchase" name="create_purchase_order" string="Create Purchase" type="object" class="btn-primary"/>
                <button name="action_view_purchase_orders_list" string="View purchase orders" type="object" class="btn-secondary" invisible="not purchase_order_ids"/>
            </button>

            <field name="date_order" position="after">
                <field name="purchase_order_ids" invisible="1"/>
            </field>

        </field>
    </record>
</odoo>